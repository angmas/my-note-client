<!-- note-partial begin-->
<div id="form-group-edit-favorite" class="form-group">
  <div class="col-sm-offset-3 col-sm-8">
    <div class="checkbox">
      {{#if note.favorite}}
      <label for="note-edit-favorite">
        <input id="note-edit-favorite" type="checkbox" name="note[favorite]" checked> favorite</label>
        {{else}}
        <label for="note-edit-favorite">
          <input id="note-edit-favorite" type="checkbox" name="note[favorite]"> favorite</label>
        {{/if}}
    </div>
  </div>
</div>
<div id="form-group-edit-title" class="form-group  has-feedback form-group-note-title">
  <label class="col-sm-3 control-label" for="note-edit-title">Note Title</label>
  <div class="col-sm-8">
    <input id="note-edit-title" type="text" name="note[note_title]" class ="note-title form-control" placeholder="Note Title" value="{{note.note_title}}">
    <span id="edit-title-glyphicon" class="glyphicon  form-control-feedback"></span>
    <span id="edit-title-help-block" class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.</span>
  </div>
</div>
<div class="form-group">
  <label for="note-edit-detail" class="col-sm-3 control-label">Note Detail</label>
  <div class="col-sm-8">
    <textarea id="note-edit-detail" type="text" name="note[note_detail]" class="note-detail form-control" placeholder="Note Detail">{{note.note_detail}}
    </textarea>
  </div>
</div>
<!-- note-partial end -->
